{
  "defaultSeverity": "error",
  "extends": "./node_modules/tslint/lib/configs/recommended",
  "rules": {
    "semicolon": [
      true,
      "always"
    ],
    "quotemark": [
      true,
      "double",
      "jsx-double"
    ],
    "indent": [
      true,
      "tabs",
      4
    ],
    "linebreak-style": [
      true,
      "LF"
    ],
    "space-before-function-paren": [
      false
    ],
    "arrow-return-shorthand": [
      true,
      "always"
    ],
    "promise-function-async": true,
    "no-console": false,
    "align": [
      true,
      "statements",
      "elements"
    ],
    "member-ordering": [false]
  },
  "rulesDirectory": [],
  "linterOptions": {
    "include": [
      "tests",
      "src"
    ],
    "exclude": [
      "node_modules"
    ]
  }
}
